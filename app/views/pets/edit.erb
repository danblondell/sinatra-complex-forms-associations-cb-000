<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="post">
  <label>Name:</label>

  <br><br>

  <input type="text" name="pet[name]" id="pet[name]" value="<%= @pet.name %>">

  <br><br>

  <% Owner.all.each do |owner| %>
    <input type="checkbox" name="owner[name]" value="<%= owner.id %>" id="<%= owner.id %>"<%= 'checked' if @pet.owner == (owner) %>>
    <%= owner.name %></input>
  <% end %>

  <br><br>

  <label>or create a new owner:</label>

  <br><br>

  <label>name:</label>

    <input type="text" name="owner_name">

  <br><br>

  <input type="submit" name="Create Pet" id="Create Pet">
</form>
